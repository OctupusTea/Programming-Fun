Terminal_Fun::Terminal_Fun( void ) : __terminal( )
{
	//	empty
}

void Terminal_Fun::Circle_Loop( Orientation orientation )
{
	winsize terminal_size;
	ioctl( STDOUT_FILENO, TIOCGWINSZ, &terminal_size );
	
	int left = 0; right = terminal_size.ws_col - 1;
	int top = 0; bottom = terminal_size.ws_row - 1;

	if( orientation == CLOCKWISE )
	{
		for( int i = 0; i < terminal_size.ws_row; ++i )
		{
			for( int j = 0; j < terminal_size.ws_col; ++j )
			{

			}
		}
	}
}
